@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "Roles";
    Layout = "_Layout";
}

<h1>All Roles</h1>
<hr />
<partial name="RoleForm" model="new RoleFormViewModel()" />
@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(D=>D.Id)</th>
                <th>@Html.DisplayNameFor(D=>D.Name)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>
                        <a class="btn btn-outline-warning" asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-trash"></i> Edit</a>
                        <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-trash"></i> Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-3 p-3 alert-warning">
        <h2>There is no Roles!</h2>
    </div>
}
@section Scripts
    {
    <partial name="_ValidationScriptsPartial" />
}


